<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <AssemblyName>Hartonomous.Infrastructure.SqlClr</AssemblyName>
    <RootNamespace>Hartonomous.Infrastructure.SqlClr</RootNamespace>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <Deterministic>true</Deterministic>
    <Optimize>true</Optimize>
    <DebugType>pdbonly</DebugType>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>HartonomousClr.snk</AssemblyOriginatorKeyFile>
    <DelaySign>false</DelaySign>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <WarningsNotAsErrors>CS1591</WarningsNotAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Data" />
    <Reference Include="System.Data.DataSetExtensions" />
    <Reference Include="System.Xml" />
    <Reference Include="System.Xml.Linq" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Neo4j.Driver" Version="5.24.0" />
    <PackageReference Include="System.Text.Json" Version="8.0.4" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="Properties\AssemblyInfo.cs" />
    <Compile Include="Neo4jCircuitBridge.cs" />
    <Compile Include="SkipTranscoderProcessor.cs" />
    <Compile Include="ActivationProcessor.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="HartonomousClr.snk" />
    <None Include="Scripts\01_Deploy_CLR_Assembly.sql" />
    <None Include="Scripts\02_Create_CLR_Procedures.sql" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="echo CLR Assembly built successfully for SQL Server deployment" />
  </Target>

</Project>