{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Hartonomous.Orchestration": "Trace"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=HartonomousDB_Dev;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "Orchestration": {
    "MaxConcurrentExecutions": 5,
    "DefaultTimeoutMinutes": 30,
    "EnableMetrics": true,
    "EnableDebugging": true,
    "StateRetentionDays": 7,
    "LangGraph": {
      "MaxNodesPerWorkflow": 50,
      "EnableParallelExecution": true,
      "MaxParallelNodes": 3,
      "NodeTimeoutSeconds": 180,
      "EnableAutoRetry": true,
      "MaxRetryAttempts": 2,
      "RetryDelaySeconds": 3
    }
  }
}